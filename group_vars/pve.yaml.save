pve_ip: 192.168.1.201
pve_hostname: souldebian

# soulfigurine
figurine_name: souldebian

# ironicbadger.ansible_users
users:
  - username: "{{ main_username }}"
    github_username: "{{ main_username }}"
    name: "{{ main_username }}"
    groups: ['wheel']
    uid: "{{ main_uid }}"
groups_to_create:
  - name: "{{ main_groupname }}"
    gid: "{{ main_gid }}"
  - name: wheel

